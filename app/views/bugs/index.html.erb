<div class="container">




<table class="table table-striped">
  <tr align="center">
     <th>Bug Name</th>
  </tr>
<% if current_user.role == 'qa'%>
 <% current_user.created_bugs.each do |b|%>

  <tr align="center">
     <td><%=b.title%></td>
     <td><%= link_to "Delete bug", bug_path(b), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}, :class => "btn btn-outline-danger" %></td>
  </tr>
  <% end %> 
<%end%>

<% if current_user.role == 'developer'%>
 <% current_user.assigned_bugs.each do |b|%>

  <tr align="center">
     <td><%=b.title%></td>
     <td><%= link_to "Solve Bug", edit_bug_path(b), :class => "btn btn-outline-primary"%></td>
  </tr>
  <% end %> 
<% end %>

<% if current_user.role == 'manager'%>
 <% @b.each do |b|%>

  <tr align="center">
     <td><%=b.title%></td>
     <td><%= link_to "Solve Bug", edit_bug_path(b), :class => "btn btn-outline-primary"%></td>
  </tr>
  <% end %> 
<% end %>   







  



</table>

</div>
